@model ToursAndTravelsManagement.Models.TourItinerary

@{
    ViewData["Title"] = "Sửa lịch trình";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-xl border-0 rounded-4">
                <div class="card-body p-4">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary mb-1">
                            <i class="fas fa-edit me-2"></i>
                            Sửa lịch trình
                        </h3>
                        <p class="text-muted mb-0">
                            Cập nhật thông tin chi tiết cho ngày trong hành trình tour
                        </p>
                    </div>

                    <hr />

                    <form method="post">
                        <!-- Hidden fields -->
                        <input type="hidden" asp-for="TourItineraryId" />
                        <input type="hidden" asp-for="TourId" />

                        <!-- Day Number -->
                        <div class="mb-3">
                            <label asp-for="DayNumber" class="form-label fw-semibold">
                                Ngày thứ
                            </label>
                            <input asp-for="DayNumber" class="form-control" />
                            <span asp-validation-for="DayNumber" class="text-danger"></span>
                        </div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">
                                Tiêu đề
                            </label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Content -->
                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-semibold">
                                Nội dung chi tiết
                            </label>
                            <textarea asp-for="Content"
                                      rows="6"
                                      class="form-control"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index"
                               asp-route-tourId="@Model.TourId"
                               class="btn btn-outline-secondary rounded-pill px-4">
                                ← Quay lại
                            </a>

                            <button type="submit"
                                    class="btn btn-success rounded-pill px-4">
                                <i class="fas fa-save me-1"></i>
                                Cập nhật lịch trình
                            </button>
                        </div>
                    </form>

                </div>
            </div>

            <!-- Validation -->
            <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
