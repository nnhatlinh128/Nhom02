@using ToursAndTravelsManagement.Enums
@model Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <h2 class="text-center fw-bold mb-4">@ViewData["Title"]</h2>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="BookingId" />

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label fw-semibold"></label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TourId" class="form-label fw-semibold"></label>
                            <select asp-for="TourId" class="form-select" asp-items="ViewBag.TourId"></select>
                            <span asp-validation-for="TourId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BookingDate" class="form-label fw-semibold"></label>
                            <input asp-for="BookingDate" class="form-control" />
                            <span asp-validation-for="BookingDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumberOfParticipants" class="form-label fw-semibold"></label>
                            <input asp-for="NumberOfParticipants" class="form-control" />
                            <span asp-validation-for="NumberOfParticipants" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TotalPrice" class="form-label fw-semibold"></label>
                            <input asp-for="TotalPrice" class="form-control" />
                            <span asp-validation-for="TotalPrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <select asp-for="Status" class="form-select"
                                    asp-items="Html.GetEnumSelectList<BookingStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentMethod" class="form-label fw-semibold"></label>
                            <input asp-for="PaymentMethod" class="form-control" />
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentStatus" class="form-label fw-semibold"></label>
                            <select asp-for="PaymentStatus" class="form-select"
                                    asp-items="Html.GetEnumSelectList<PaymentStatus>()"></select>
                            <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreatedBy" class="form-label fw-semibold"></label>
                            <input asp-for="CreatedBy" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="CreatedDate" class="form-label fw-semibold"></label>
                            <input asp-for="CreatedDate" class="form-control" readonly />
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label fw-semibold">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                ← Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-primary px-5">
                                Lưu thay đổi
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
