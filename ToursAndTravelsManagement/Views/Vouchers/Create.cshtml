@model Voucher

@{
    ViewData["Title"] = "Tạo Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">

                    <h3 class="text-center fw-bold mb-4">@ViewData["Title"]</h3>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Code" class="form-label"></label>
                            <input asp-for="Code" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiscountValue" class="form-label"></label>
                            <input asp-for="DiscountValue" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Loại giảm</label>
                            <select asp-for="IsPercentage" class="form-select">
                                <option value="true">Phần trăm (%)</option>
                                <option value="false">Tiền mặt</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxDiscountAmount" class="form-label"></label>
                            <input asp-for="MaxDiscountAmount" class="form-control" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label class="form-check-label">Hoạt động</label>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary rounded-pill py-2">
                                Tạo Voucher
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Index">← Quay lại danh sách</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
