<!-- ==================== 5. ƯU ĐÃI TỐT NHẤT HÔM NAY ==================== -->
<section id="best-offers" class="section-padding bg-light position-relative">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center" data-aos="fade-down">
                <h2 class="display-4 fw-bold text-dark mb-3">Ưu đãi tốt nhất hôm nay</h2>
            </div>
        </div>


        @if (ViewBag.BestOfferTours != null && ((IEnumerable<dynamic>)ViewBag.BestOfferTours).Any())
        {
            var tours = (List<Tour>)ViewBag.BestOfferTours;


            <div id="bestOffersCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="6000">
                <div class="carousel-inner">
                    @for (int i = 0; i < tours.Count; i += 3)
                    {
                        var toursInSlide = tours.Skip(i).Take(3).ToList();
                        var isActive = i == 0 ? "active" : "";


                        <div class="carousel-item @isActive">
                            <div class="row g-5 justify-content-center">
                                @foreach (var tour in toursInSlide)
                                {
                                    var durationDays = (tour.EndDate - tour.StartDate).Days + 1;


                                    <div class="col-lg-4 col-md-6">
                                        <div class="offer-card rounded-4 overflow-hidden shadow-sm h-100 bg-white position-relative hover-lift tour-item"
                                             data-price="@tour.Price"
                                             data-destination="@(tour.Destination?.Name ?? "")"
                                             data-duration="@durationDays"
                                             data-name="@tour.Name">


                                            @* Ảnh tour + Badge ưu đãi *@
                                            @if (!string.IsNullOrEmpty(tour.Destination.ImageUrl))
                                            {
                                                <div class="tour-image-wrapper position-relative">
                                                    <!-- Badge -20% -->
                                                    <div class="position-absolute top-0 start-0 m-3 z-3">
                                                        <span class="badge bg-danger fs-6 px-3 py-2 rounded-pill shadow">
                                                            -20%
                                                        </span>
                                                    </div>


                                                    <img src="@Url.Content(tour.Destination.ImageUrl)"
                                                         alt="@tour.Name"
                                                         class="img-fluid w-100"
                                                         style="height: 230px; object-fit: cover;" />
                                                </div>
                                            }


                                            <!-- Thông tin tour -->
                                            <div class="p-4">
                                                <h3 class="h5 fw-bold mb-3">@tour.Name</h3>


                                                <div class="row g-3 text-muted small mb-3">
                                                    <div class="col-12">
                                                        <i class="fas fa-map-marker-alt me-2"></i>
                                                        <strong>Điểm đến:</strong> @(tour.Destination?.Name ?? "Chưa xác định")
                                                    </div>
                                                    <div class="col-12">
                                                        <i class="fas fa-calendar-alt me-2"></i>
                                                        <strong>Thời gian:</strong>
                                                        @tour.StartDate.ToString("dd/MM/yyyy") - @tour.EndDate.ToString("dd/MM/yyyy")
                                                        (@durationDays ngày)
                                                    </div>
                                                    <div class="col-12">
                                                        <i class="fas fa-users me-2"></i>
                                                        <strong>Số lượng:</strong> Tối đa @tour.MaxParticipants khách
                                                    </div>
                                                </div>


                                                <div class="d-flex align-items-end justify-content-between mt-4">
                                                    <div>
                                                        <h4 class="fw-bold text-danger mb-0 fs-3">
                                                            @tour.Price.ToString("N0") VNĐ
                                                        </h4>
                                                    </div>
                                                    <a asp-controller="Tours" asp-action="Details" asp-route-id="@tour.TourId"
                                                       class="btn btn-primary rounded-pill px-4 py-2 fw-semibold">
                                                        Xem chi tiết <i class="fas fa-arrow-right ms-2"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                                <!-- Đệm nếu thiếu tour -->
                                @if (toursInSlide.Count < 3)
                                {
                                    for (int j = toursInSlide.Count; j < 3; j++)
                                    {
                                        <div class="col-lg-4 col-md-6 d-none d-md-block"></div>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>


                <!-- Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#bestOffersCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" style="filter: invert(1);"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#bestOffersCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" style="filter: invert(1);"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        }
        else
        {
            <p class="text-center text-muted fs-4">Hiện chưa có tour ưu đãi nào.</p>
        }


        <div class="text-center mt-5">
            <a asp-controller="Tours" asp-action="PublicTours"
               class="btn btn-outline-dark btn-lg px-5 py-3 rounded-pill fw-medium">
                Xem tất cả tours
            </a>
        </div>
    </div>
</section>


