<!-- Hiệu ứng text khi chuyển slide -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const carousel = document.querySelector('#heroCarousel');
        const carouselInstance = new bootstrap.Carousel(carousel);


        function animateText() {
            const activeSlide = carousel.querySelector('.carousel-item.active');
            const h1 = activeSlide.querySelector('h1');
            const p = activeSlide.querySelector('p');
            const btn = activeSlide.querySelector('a.btn');


            h1.className = 'display-2 fw-bold text-white mb-4 lh-base animate__animated animate__fadeInDown';
            p.className = 'lead text-white opacity-90 mb-5 animate__animated animate__fadeInUp';
            btn.className = 'btn btn-warning btn-lg px-5 py-3 rounded-pill fw-bold shadow-lg hover-lift mt-3 animate__animated animate__fadeInUp animate__delay-1s';
        }


        animateText();
        carousel.addEventListener('slid.bs.carousel', function () {
            animateText();
        });
    });
</script>


