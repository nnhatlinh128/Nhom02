@model ToursAndTravelsManagement.Models.Destination

@{
    ViewData["Title"] = "Xóa điểm đến";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-xl border-0 rounded-4">
                <div class="card-body p-4">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-danger mb-2">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Xác nhận xóa điểm đến
                        </h3>
                        <p class="text-muted mb-0">
                            Việc xóa điểm đến có thể ảnh hưởng đến các tour liên quan.
                            Hành động này <strong>không thể hoàn tác</strong>.
                        </p>
                    </div>

                    <hr />

                    <!-- Destination Info -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Tên điểm đến</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Name</dd>

                        <dt class="col-sm-4 text-muted">Mô tả</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 text-muted">Quốc gia</dt>
                        <dd class="col-sm-8">@Model.Country</dd>

                        <dt class="col-sm-4 text-muted">Thành phố</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4 text-muted">Hình ảnh</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl"
                                     alt="@Model.Name"
                                     class="img-fluid rounded-3 shadow-sm"
                                     style="max-height: 200px;" />
                            }
                            else
                            {
                                <span class="text-muted">Không có hình ảnh</span>
                            }
                        </dd>
                    </dl>

                    <!-- Actions -->
                    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="DestinationId" />

                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            ← Quay lại
                        </a>

                        <button type="submit" class="btn btn-danger rounded-pill px-4">
                            <i class="fas fa-trash-alt me-1"></i>
                            Xóa điểm đến
                        </button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
