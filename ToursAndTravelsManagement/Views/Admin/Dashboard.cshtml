        new Chart(document.getElementById('revenueChart'), {
            type: 'line',
            data: {
                labels,
                datasets: [{
                    data: values,
                    borderColor: '#fba834',
                    backgroundColor: 'rgba(251,168,52,0.15)',
                    tension: 0.4,
                    fill: true,
                    pointRadius: 4
